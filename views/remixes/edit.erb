<h1>Edit Remix</h1>
<form class="" action="/remixes/:id" method="post">
  <div class="">
    <label>Dance Title</label>
    <input type="text" name="title" value="<%= @remix[:title] %>">
  </div>
  <div class="">
    <label>Youtube Link</label>
    <input type="text" name="body" value="<%= @remix[:body] %>">
  </div>
  <div class="">
    <input type="submit" name="_method" value="PUT">
  </div>

</form>
